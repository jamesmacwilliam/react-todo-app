{
  "variables": {
    "aws_access_key": "{{env `PERSONAL_AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{env `PERSONAL_AWS_SECRET_ACCESS_KEY`}}",
    "ssh_username": "ops"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key` }}",
      "region": "us-east-1",
      "source_ami": "ami-04681a1dbd79675a5",
      "instance_type": "t2.micro",
      "ssh_username": "{{user `ssh_username`}}",
      "ami_name": "packer-base {{timestamp}}",
      "associate_public_ip_address": true
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "./../puppet/install_agent.sh"
    },
    {
      "type": "file",
      "source": "../app",
      "destination": "/tmp/app"
    },
    {
      "type": "puppet-masterless",
      "manifest_file": "../puppet/manifests/default.pp",
      "manifest_dir": "../puppet/manifests",
      "module_paths": ["../puppet/modules"]
    }
  ]
}
